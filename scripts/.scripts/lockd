#!/bin/bash
slug=$(date +%s)
count=$(ls $HOME/vimwiki/diary | wc -l)
if [[ "$PWD" == "$HOME/vimwiki/diary" ]]; then
    cd $HOME
fi
if [[ $count -gt 5 ]]; then
    cp -rf $HOME/vimwiki/diary diary$slug
    gpgtar -o $HOME/vimwiki/diary.gpg --yes -r $USER -e diary$slug
    if [[ "$?" == "0" ]]; then
        rm -rf diary$slug
        rm -rf $HOME/vimwiki/diary
        echo [Locked]
    fi
else
    echo "Folder too small, exiting..."
    echo $count
    exit 1
fi 
